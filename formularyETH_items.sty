\RequirePackage{enumitem}

\setlist[enumerate]{font=\normalfont,
					topsep=0pt,
					itemsep=3pt,
					%noitemsep,
					label=\textcolor{item}{\textbf{\alph*}}),
					ref=(\textnormal{\textcolor{item}{\textbf{\alph*}})}
					}
% \newlist{format}{Level} creates a new list type 
% ======================================================================
\newlist{romanlist}{enumerate}{1}
\setlist[romanlist]{%
  label=\textcolor{item}{\textbf{\Roman*}}),    
	ref=(\textnormal{\textcolor{item}{\textbf{\Roman*}})},
	noitemsep,
	nolistsep
}

\newlist{numberlist}{enumerate}{1}
\setlist[numberlist]{%
  label=\textcolor{item}{\textbf{\arabic*}}.,    
	ref=(\textnormal{\textcolor{item}{\textbf{\arabic*}})},
	noitemsep,
	nolistsep
}

% Circle Items
\newlist{circlelist}{enumerate}{1}
\setlist[circlelist]{%
  label=\protect\circledItem{\textcolor{attributes}{\arabic*}},    
	ref=\protect\circledItem{\textcolor{attributes}{\arabic*}},
	noitemsep,
	nolistsep
}
